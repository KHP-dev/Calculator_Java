<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item
        android:state_pressed="true"
        android:bottom="0dp"
        android:right="0dp"
        android:top="0dp"
        android:left="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="#cfd0d2" />

            <stroke
                android:width="3dp"
                android:color="#000000" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:right="0dp"
        android:top="0dp"
        android:left="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="#cfd0d2" />

            <stroke
                android:width="0.8dp"
                android:color="#afb1b2" />
        </shape>
    </item>

</selector>